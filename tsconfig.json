{
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2022",
      "lib": ["ES2022"],
      "outDir": "build", // Output transpiled files to build/
      "rootDir": "src",
      "noEmitOnError": true,
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "incremental": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
